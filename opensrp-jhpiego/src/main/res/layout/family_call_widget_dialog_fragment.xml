<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:paddingBottom="50dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <ImageView
        android:layout_gravity="right"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/close"
        android:src="@drawable/ic_clear_black_24dp"
        android:tint="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/call_title"
            style="@style/CustomFontTextViewStyle.ClientList.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Call caregiver"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/layout_family_head"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/call_head_name"
                style="@style/CustomFontTextViewStyle.ClientList.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Name 1"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="normal" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/call_head_title"
                style="@style/CustomFontTextViewStyle.ClientList.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Head of family"
                android:textColor="@color/grey"
                android:textSize="22sp"
                android:textStyle="normal" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/call_head_phone"
                style="@style/CustomFontTextViewStyle.ClientList.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="CALL [-]"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_caregiver"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/call_caregiver_name"
                style="@style/CustomFontTextViewStyle.ClientList.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Name 2"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="normal" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/call_caregiver_title"
                style="@style/CustomFontTextViewStyle.ClientList.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Caregiver"
                android:textColor="@color/grey"
                android:textSize="22sp"
                android:textStyle="normal" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/call_caregiver_phone"
                style="@style/CustomFontTextViewStyle.ClientList.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="CALL [-]"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>